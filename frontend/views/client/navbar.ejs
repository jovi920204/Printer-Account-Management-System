<%- include("header") -%>
<section name="sidebar" class="sidebar-section">
  <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
    <a href="/client/print" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <img src="/icon/print-solid-white.png" alt="" width="40" height="32" class="me-2">
      <span class="fs-4">
        <div class="" style="font-size: smaller;">
          電腦教室
        </div>
        <div class="h5">
          印表機使用系統
        </div>
      </span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/client/print" class="nav-link text-white" aria-current="page">
          <img src="/icon/print-solid-white.png" alt="" width="16" height="16" class="me-2">
          列印檔案
        </a>
      </li>
      <li>
        <a href="/client/usage" class="nav-link text-white">
          <img src="/icon/chart-simple-solid-white.png" alt="" width="16" height="16" class="me-2">
          使用報表
        </a>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
      <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle dropdown-a" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="/icon/user-solid-white.png" alt="" width="16" height="16" class="me-3">
        <strong><%= user.name %></strong>
      </a>
      <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1" >
        <li><a class="dropdown-item" href="#">設定 (未開發)</a></li>
        <li><a class="dropdown-item" href="#">個人頁面 (未開發)</a></li>
        <li><hr class="dropdown-divider"></li>
        <li>
          <a class="dropdown-item">
            <form action="/logout?_method=DELETE" method="post">
              <button class="none-css-button" type="submit" style="padding-right: 100%;"><img src="/icon/right-from-bracket-solid-dee2e6.png" alt="" width="16" height="16" class="me-2">登出</button>
            </form>
          </a>
        </li>
      </ul>
    </div>
  </div>    
</section>

<style>
  .sidebar-section {
    height: 100vh;
    width: 280px;
  }
  .sidebar {
    display: flex;
    flex-wrap: nowrap;
    height: 100vh;
    width: auto;
    height: -webkit-fill-available;
    max-height: 100vh;
    overflow-x: auto;
    overflow-y: hidden;
  }
  label {
    width: 203px;
    display: inline-block;
  }
  .logout-frame, .custom-btn{
    width: 72px;
    height: 65px;
  }
  .none-css-button{
    border: none;
    background-color: rgba(0,0,0,0);
    color: #dee2e6;
    padding: 0;
    margin: 0;
  }
  .icon-large{
    transform: scale(1.5);
    /* font-size: 30px; */
  }
  .dropdown-a{
    padding-left: 5px;
  }
  img{
    object-fit: contain;
  }
  .nav-link:hover {
    background-color: rgba(190, 190, 190, 0.372);
  }
</style>
<script>
document.querySelectorAll(".nav-link").forEach((link) => {
  if (link.href === window.location.href) {
      link.classList.add("active");
      link.setAttribute("aria-current", "page");
  }
});
</script>